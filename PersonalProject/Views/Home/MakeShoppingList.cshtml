@model RecipeCheckList

<h1>Select Recipes to add to shopping list</h1>
<form method="post" action="MakeShoppingList">
    @for (int i =0; i < Model.List.Count(); i++)
    {
        <input type="hidden" asp-for="@Model.List[i].Recipe.RecipeID">
        <input type="hidden" asp-for="@Model.List[i].Recipe.RecipeInstructions">
        <label asp-for="@Model.List[i].Recipe.RecipeName">@Model.List[i].Recipe.RecipeName</label>
        <input type="checkbox" asp-for="@Model.List[i].IsChecked">
        <br />
    }
    <button type="submit" class="btn btn-primary">Make shopping list</button>
</form>
