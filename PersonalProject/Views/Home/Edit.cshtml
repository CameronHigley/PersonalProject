@model RecipeViewModel

<h2>Edit a Recipe:</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.Recipe.RecipeName">Recipe Name</label>
        <input asp-for="@Model.Recipe.RecipeName" class="form-control" />
    </div>

    <div class="ingredients">
        @if (Model.RecipeIngredients == null)
        {
            <label>
                Amount
                <input name="RecipeIngredients[0].Amount" />
            </label>
            <label>
                Ingredient
                <input name="Ingredients[0].IngredientName" />
            </label>
        }
        else
        {
            for (int i = 0; i < @Model.RecipeIngredients.Count(); i++)
            {
                @if (i > 0)
                {
                    <br />
                }
                <label>
                    Amount
                    <input name="RecipeIngredients[@i].Amount" value="@Model.RecipeIngredients[i].Amount" />
                </label>
                <label>
                    Ingredient
                    <input name="Ingredients[@i].IngredientName" value="@Model.RecipeIngredients[i].Ingredient.IngredientName" />
                </label>
            }
        }

    </div>

    <div>
        <input type="button" value="Add additional ingredient" name="AddIngredient" id="addIngredient">
        <input type="button" value="Remove last ingredient" name="RemoveIngredient" id="removeIngredient">
    </div>

    <div>
        <label asp-for="@Model.Recipe.RecipeInstructions">Instructions:</label>
        <textarea asp-for="@Model.Recipe.RecipeInstructions" class="form-control"></textarea>
    </div>

    <input type="hidden" asp-for="@Model.Recipe.RecipeID" value="@Model.Recipe.RecipeID" />
    <input type="hidden" asp-for="@Model.Recipe.UserId" value="@ViewBag.userId" />

    <button type="submit" class="btn btn-primary">Confirm Changes</button>
    <a asp-asp-controller="Home" asp-action="ChooseRecipe" class="btn btn-primary">Cancel</a>

</form>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="~/js/Add.js"></script>



